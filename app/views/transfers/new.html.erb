<h1>New transfer</h1>

<%= form_for([@user, @bank_account, @transfer]) do |f| %>
  <% if @transfer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@transfer.errors.count, "error") %> prohibited this transfer from being saved:</h2>

      <ul>
        <% @transfer.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% if @transfer_error %>
    <span class="stripe-errors"><%= @transfer_error %></span>
  <% end %>


  <div class="field">
    <%= label_tag "amount" %>
    <%= text_field_tag "amount", params[:amount] %>
  </div>

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

