<h1>Listing bank_accounts</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Stripe token</th>
      <th>Description</th>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @bank_accounts.each do |bank_account| %>
      <tr>
        <td><%= bank_account.user %></td>
        <td><%= bank_account.stripe_token %></td>
        <td><%= bank_account.description %></td>
        <td><%= bank_account.name %></td>
        <td><%= link_to 'Show', bank_account %></td>
        <td><%= link_to 'Edit', edit_bank_account_path(bank_account) %></td>
        <td><%= link_to 'Destroy', bank_account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bank account', new_user_bank_account_path(@user) %>
